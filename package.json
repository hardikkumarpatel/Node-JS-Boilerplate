{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "Hardik Patel",
  "main": "src/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf build/",
    "start": "nodemon",
    "build": "npm run clean && babel src --out-dir build --extensions '.js' --source-maps --copy-files --ignore './package-lock.json .gitignore'",
    "start:dev": "npm run build && cross-env NODE_ENV=development nodemon --exec babel-node build/server.js",
    "start:stage": "npm run build && cross-env NODE_ENV=staging nodemon --exec babel-node build/server.js",
    "start:prod": "npm run build && cross-env NODE_ENV=production nodemon --exec babel-node build/server.js",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "npx eslint 'src/**/*.{js,jsx}'",
    "lint:fix": "DEBUG=eslint:* npx eslint --fix 'src/**/*.{js,jsx}'",
    "prepare": "husky || true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "prettier --write --ignore-unknown",
      "npx eslint 'src/**/*.{js,jsx}'"
    ]
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/node": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.5.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "7.4.0",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "8.5.2",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "pg": "^8.12.0",
    "rimraf": "^5.0.7",
    "sequelize": "^6.37.3",
    "socket.io": "4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0"
  },
  "engines": {
    "node": "20.x"
  }
}
